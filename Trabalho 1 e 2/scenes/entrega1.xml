<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>                 
    <translation x="-1" y="1" z="0" />               
    <rotation axis="x" angle="0" />                
    <rotation axis="y" angle="0" />                
    <rotation axis="z" angle="0" />                
    <scale sx="0.25" sy="0.25" sz="0.25" />         
    <reference length="5" />                        
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />       
    <background r="0" g="0" b="0" a="1" />          
</ILLUMINATION>


<!-- Lights -->
<LIGHTS>	
	<LIGHT id="light0">                                    
        <enable value ="1" />                   	       
        <position  x="0" y="10" z="0" w="1" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />        	 
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />      
    </LIGHT>
	
	<LIGHT id="light1">                                    
        <enable value ="1" />                   	      
        <position x="30" y="10" z="0" w="1" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </LIGHT>
	
	<LIGHT id="light2">                                   
        <enable value ="1" />                   	       
        <position x="0" y="10" z="20" w="1" />       		   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />      
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </LIGHT>

    <LIGHT id="light3">                                   
        <enable value ="1" />                   	       
        <position x="30" y="10" z="20" w="1" />       			
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           	
        <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />       
        <specular r="0.6" g="0.6" b="0.6" a="1.0" />      
    </LIGHT>
    
</LIGHTS>

<!-- Textures -->
<TEXTURES>
	<!-- Satellite Body -->
    <TEXTURE id="satellite_body_tex">
        <file path="images/satellite_body.jpg" />               
        <amplif_factor s="1" t="1" />                           
    </TEXTURE>

     <!-- Steel -->
    <TEXTURE id="steel">
        <file path="images/steel.jpg" />                
        <amplif_factor s="3" t="4" />                           
    </TEXTURE>

    <!-- Rocks -->
    <TEXTURE id="solar_cell">
        <file path="images/solar_cell.png" />                
        <amplif_factor s="15" t="10" />                           
    </TEXTURE>

    <!-- Glass work -->
    <TEXTURE id="earth_tex">
        <file path="images/earth.jpg" />               
        <amplif_factor s="1" t="1" />                           
    </TEXTURE>

    <!-- Street bench -->
    <TEXTURE id="banco">
        <file path="images/bank.jpg" />                
        <amplif_factor s="1" t="1" />                           
    </TEXTURE>


    
</TEXTURES>


<MATERIALS>
	<!-- Pyramid material -->
    <MATERIAL id="piramideMaterial">                                  
        <shininess value="1" />
        <specular r="0" g="0" b="0" a="1" />        
        <diffuse r="1.0" g="0.68" b="0.4" a="1" />        
        <ambient r="0.2" g="0.2" b="0.2" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>
	
	<!-- Tree leaves material -->
	<MATERIAL id="leavesTreeMaterial">                                  
        <shininess value="1" />
        <specular r="0.2" g="0.2" b="0.2" a="1" />        
        <diffuse r="0.0" g="0.207" b="0.0" a="1" />       
        <ambient r="0.1" g="0.1" b="0.1" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>
	
	<!-- Tree trunk material -->
	<MATERIAL id="trunkTreeMaterial">                                  
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />        
        <diffuse r="0.6" g="0.298" b="0.0" a="1" />      
        <ambient r="0.1" g="0.1" b="0.1" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />       
    </MATERIAL>

    <!-- Lamp post material -->
    <MATERIAL id="lightPostMaterial">                                  
        <shininess value="100" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />        
        <diffuse r="0.447" g="0.416" b="0.416" a="1" />       
        <ambient r="0.0" g="0.0" b="0.0" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>

    <!-- Light bulb material -->
    <MATERIAL id="lightMaterial">                                  
        <shininess value="100" />
        <specular r="0.5" g="0.5" b="0.5" a="1" />       
        <diffuse r="0.5" g="0.5" b="0.5" a="1" />       
        <ambient r="0.0" g="0.0" b="0.0" a="1" />        
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>

    <!-- A default material -->
    <MATERIAL id="defaultMaterial">                                  
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />        
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />       
        <ambient r="0.4" g="0.4" b="0.4" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>

</MATERIALS>


<!-- The leaves -->
<LEAVES>
</LEAVES>


<!-- The nodes -->
<NODES>

    <ROOT id="root" />     

    <!-- The root node -->
    <NODE id="root">       
        <MATERIAL id="defaultMaterial" />         
        <TEXTURE id="null" />  

        <DESCENDANTS>
            <NODEREF id="satellite" />
            <NODEREF id="earth" />
        </DESCENDANTS>

    </NODE>

    <!-- Earth node -->
    <NODE id="earth">
        <MATERIAL id="null" />
        <TEXTURE id="earth_tex" />

        <TRANSLATION x="-60" y="-70" z="16" />

        <DESCENDANTS>
            <LEAF id="sphere1" type="sphere" args="20 50 50" />
        </DESCENDANTS>

    </NODE>

    <!-- Satellite node -->
    <NODE id="satellite">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="satellite_body" />
            <NODEREF id="satellite_panels" />
            <NODEREF id="satellite_cables" />
        </DESCENDANTS>
    </NODE>

    <!-- Satellite body node -->
    <NODE id="satellite_body">
        <MATERIAL id="null" />
        <TEXTURE id="satellite_body_tex" />

        <DESCENDANTS>
            <NODEREF id="satellite_body_bottom" />
            <NODEREF id="satellite_body_top" />
        </DESCENDANTS>
    </NODE>

    <!-- Satellite bottom body node -->
    <NODE id="satellite_body_bottom">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <LEAF id="cylinder1" type="cylinder" args="5 2.2 2.2 20 20" /> 
        </DESCENDANTS>
    </NODE>

    <!-- Satellite top body node -->
    <NODE id="satellite_body_top">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="0" z="5" />

        <DESCENDANTS>
            <LEAF id="cylinder2" type="cylinder" args="3 2.2 1.8 20 20" />  
        </DESCENDANTS>
    </NODE>


    <!-- Satellite cables node -->
    <NODE id="satellite_cables">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="satellite_cable1" />
            <NODEREF id="satellite_cable2" />
        </DESCENDANTS>
    </NODE>

    <!-- Satellite cable 1 node -->
    <NODE id="satellite_cable1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="2" y="0" z="2" />
        <SCALE sx="0.3" sy="0.3" sz="0.3" />
        <ROTATION axis="y" angle="90" />

        <DESCENDANTS>
            <LEAF id="cylinder3" type="cylinder" args="3 1 1 20 20" /> 
        </DESCENDANTS>
    </NODE>


    <!-- Satellite cable 2 node-->
    <NODE id="satellite_cable2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="-2" y="0" z="2" />
        <SCALE sx="0.3" sy="0.3" sz="0.3" />
        <ROTATION axis="y" angle="-90" />
        
        <DESCENDANTS>
            <LEAF id="cylinder4" type="cylinder" args="3 1 1 20 20" /> 
        </DESCENDANTS>
    </NODE>


    <!-- Satellite panels node -->
    <NODE id="satellite_panels">
        <MATERIAL id="null" />
        <TEXTURE id="solar_cell" />
        
        <DESCENDANTS>
            <NODEREF id="satellite_panel1" />
            <NODEREF id="satellite_panel2" />
        </DESCENDANTS>
    </NODE>

    <!-- Satellite panel 1 node --> 
    <NODE id="satellite_panel1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="-2" y="-0.5" z="-1.6" />
        <SCALE sx="1.8" sy="0.1" sz="0.75" />

        <DESCENDANTS>
            <NODEREF id="faceCubo1" />
            <NODEREF id="faceCubo2" />
            <NODEREF id="faceCubo3" />
            <NODEREF id="faceCubo4" />
            <NODEREF id="faceCubo5" />
            <NODEREF id="faceCubo6" />
        </DESCENDANTS>

    </NODE>

    <!-- Satellite panel 2 node --> 
    <NODE id="satellite_panel2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="-16" y="-0.5" z="-1.6" />
        <SCALE sx="1.8" sy="0.1" sz="0.75" />

        <DESCENDANTS>
            <NODEREF id="faceCubo1" />
            <NODEREF id="faceCubo2" />
            <NODEREF id="faceCubo3" />
            <NODEREF id="faceCubo4" />
            <NODEREF id="faceCubo5" />
            <NODEREF id="faceCubo6" />
        </DESCENDANTS>

    </NODE>


     <!-- A cube face -->
    <NODE id="faceCubo1">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />                   

        <TRANSLATION x="2.5" y="4" z="7.5" />

        <DESCENDANTS>
                    <LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
     <NODE id="faceCubo2">      
        <MATERIAL id="null" />     
        <TEXTURE id="null" />                   

        <TRANSLATION x="2.5" y="4" z="2.5" />
        <ROTATION axis="y" angle="-90" />

        <DESCENDANTS>
                    <LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo3">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />                   

        <TRANSLATION x="7.5" y="4" z="7.5" />
        <ROTATION axis="y" angle="90" />

        <DESCENDANTS>
                    <LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo4">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />                   

        <TRANSLATION x="7.5" y="4" z="2.5" />
        <ROTATION axis="y" angle="180" />

        <DESCENDANTS>
                    <LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo5">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />                   

        <ROTATION axis="x" angle="-90" />
        <TRANSLATION x="2.5" y="-7.5" z="8" />
        <SCALE sx="1" sy="1.25" sz="1" />

        <DESCENDANTS>
                    <LEAF  type="rectangle" args="0 4 5 0" />        
       </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo6">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />                   

        <TRANSLATION x="2.5" y="4" z="2.5" />
        <ROTATION axis="x" angle="90" />
        <SCALE sx="1" sy="1.25" sz="1" />

        <DESCENDANTS>
                    <LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>

    </NODE>

</NODES>
</SCENE>