<SCENE>

    <INITIALS>
        <frustum near="1" far="500"/>
        <translation x="-1" y="1" z="0" />
        <rotation axis="x" angle="0" />
        <rotation axis="y" angle="0" />
        <rotation axis="z" angle="0" />
        <scale sx="0.25" sy="0.25" sz="0.25" />
        <reference length="5" />
    </INITIALS>

    <ILLUMINATION>
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <background r="0" g="0" b="0" a="1" />
    </ILLUMINATION>


    <!-- Lights -->
    <LIGHTS>
       <LIGHT id="light0">
        <enable value ="1" />
        <position  x="0" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light1">
        <enable value ="1" />
        <position x="30" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light2">
        <enable value ="1" />
        <position x="0" y="10" z="20" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light3">
        <enable value ="1" />
        <position x="30" y="10" z="20" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
        <specular r="0.6" g="0.6" b="0.6" a="1.0" />
    </LIGHT>

</LIGHTS>

<TEXTURES>

    <TEXTURE id="black">
        <file path="images/black.png" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="wood">
        <file path="images/wooden.png" />
        <amplif_factor s="3" t="5" />
    </TEXTURE>  

</TEXTURES>

<MATERIALS>

    <MATERIAL id="defaultMaterial">
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />
        <ambient r="0.4" g="0.4" b="0.4" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

</MATERIALS>

<ANIMATIONS>
</ANIMATIONS>

<LEAVES>
</LEAVES>

<NODES>

    <ROOT id="root" />

    <!-- The root node -->
    <NODE id="root">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="base" />
        </DESCENDANTS>

    </NODE>


    <NODE id="base">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="wood" />

       <TRANSLATION x="-6" y="-2.7" z="-6" />

        <SCALE sx="0.01" sy="0.01" sz="0.01"/>

        <DESCENDANTS>
            <NODEREF id="cube"/>
        </DESCENDANTS>

    </NODE>

    <NODE id="table">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="wood" />

        <TRANSLATION x="-23" y="-5.6" z="-23"/> 

        <SCALE sx="15" sy="0.7" sz="15"/>

        <DESCENDANTS>
            <NODEREF id="cube"/>
        </DESCENDANTS>

    </NODE>

    <NODE id="cup">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="null" />

        <SCALE sx="2" sy="2" sz="2" />

        <DESCENDANTS>
            <LEAF type="object" args="cup" />
        </DESCENDANTS>
    </NODE>

   

    <NODE id="cube">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="-2.5" y="-3" z="-2.5" />

        <DESCENDANTS>
            <NODEREF id="faceCubo1" />
            <NODEREF id="faceCubo2" />
            <NODEREF id="faceCubo3" />
            <NODEREF id="faceCubo4" />
            <NODEREF id="faceCubo5" />
            <NODEREF id="faceCubo6" />
        </DESCENDANTS>

    </NODE>



     <!-- A cube face -->
    <NODE id="faceCubo1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="2.5" y="4" z="7.5" />

        <DESCENDANTS>
                    <LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
     <NODE id="faceCubo2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="2.5" y="4" z="2.5" />
        <ROTATION axis="y" angle="-90" />

        <DESCENDANTS>
                    <LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo3">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="7.5" y="4" z="7.5" />
        <ROTATION axis="y" angle="90" />

        <DESCENDANTS>
                    <LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo4">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="7.5" y="4" z="2.5" />
        <ROTATION axis="y" angle="180" />

        <DESCENDANTS>
                    <LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo5">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <ROTATION axis="x" angle="-90" />
        <TRANSLATION x="2.5" y="-7.5" z="8" />
        <SCALE sx="1" sy="1.25" sz="1" />

        <DESCENDANTS>
                    <LEAF  type="rectangle" args="0 4 5 0" />
       </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo6">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="2.5" y="4" z="2.5" />
        <ROTATION axis="x" angle="90" />
        <SCALE sx="1" sy="1.25" sz="1" />

        <DESCENDANTS>
                    <LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>

</NODE>





</NODES>

</SCENE>
